                                <i class="fa fa-th"></i>
                            </a>
                        </div>
                    </div>
                </header><!-- sect-heading -->

                @foreach (var item in Model)
                {
                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="@Url.Action("Details", "Product", new { Id = item.Id })" class="img-wrap">
                                    <span class="badge badge-danger"> Mới </span>
                                    <img src="~/Content/images/items/@item.Avatar">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-6">
                                <div class="info-main">
                                    @Html.ActionLink(item.Name, "Details", "Product", new { @Id = item.Id }, null)
