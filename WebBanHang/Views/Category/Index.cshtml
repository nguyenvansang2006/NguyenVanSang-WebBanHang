<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">

                    <div class="card card-category">
                        <div class="img-wrap col-md-12" style="background: #ffd7d7">
                            <a href="@Url.Action("Index", "Product", new { Id = item.Id })">
                                <img src="~/Content/images/items/@item.Avatar">
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@Html.ActionLink(item.Name, "ProductCategoty", "Category", new { @Id = item.Id }, null)</h4>

                        </div>
                    </div>
                </div> <!-- col.// -->
            }

        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>
